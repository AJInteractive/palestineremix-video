extends layout

block content
  .row
    .col-md-12
      video(poster="/images/#{lang}/poster.jpg" controls)
        source(type="video/mp4" src="/compose/#{video}")
  .row
    .col-md-12
      ul.media-list
        each segment in segments
          li.media
            .media-left
              a
                img.media-object(src="http://interactive.aljazeera.com/aje/PalestineRemix/transcripts/images/#{segment.id}/#{lang}/p/img#{Math.floor(segment.start / 1000)}.jpg")
            .media-body
              h4.media-heading= segment.title
                span= ' [' + segment.startTC + ' â€“ ' + segment.endTC + ']'
              p!= segment.text
