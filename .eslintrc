{
  "extends": "eslint-config-airbnb",
  "rules": {
    "guard-for-in": 0,
    "id-length": [2, {"min": 1}],
    "handle-callback-err": 2,
    "prefer-template": 2,
    "react/jsx-boolean-value": [2, "always"],
    "key-spacing": [2, { "align": "value" }],
    "no-multi-spaces": [2, {
      "exceptions": {
        "VariableDeclarator": true,
        "ImportDeclaration": true
      }
    }],
    "no-shadow": [2, {
      "builtinGlobals": false,
      "hoist": "functions",
      "allow": [
        "err", "res", "req"
      ]
    }],
    "max-len": [2, 100, 2, {
      "ignoreComments": true,
      "ignoreUrls": true,
      "ignorePattern": "\\$\\{"
    }]
  },
  "env": {
      "node": true
  }
}
